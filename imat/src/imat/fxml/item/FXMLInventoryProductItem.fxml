<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<fx:root styleClass="Item-Style-Inventory" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <GridPane hgap="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
         <children>
            <Label fx:id="nameLabel" maxHeight="-Infinity" styleClass="text-small" text="&lt;Product Name&gt;" />
            <Label fx:id="amountLabel" maxHeight="-Infinity" styleClass="text-small" text="&lt;Amount&gt;" GridPane.columnIndex="1" />
            <Label fx:id="priceLabel" maxHeight="-Infinity" styleClass="text-small" text="&lt;Price&gt;" GridPane.columnIndex="2" />
         </children>
      </GridPane>
   </children>
   <stylesheets>
      <URL value="@ItemStyle.css" />
      <URL value="@../Generic.css" />
   </stylesheets>
</fx:root>
